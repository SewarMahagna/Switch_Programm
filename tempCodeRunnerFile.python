def median(arr): 
    sorted_arr = sorted(arr)
    n = len(arr)
    if n%2 ==0 :
        return sorted_arr[n//2-1]
    return sorted_arr[n//2]


res1 = median([3,10,4])
res2 = median([-10,-20,50,1000])
res3 = median([-1,1])
res4 = median([-1,-1,2])

print(res1)
print(res2)
print(res3)
print(res4)


